<idea-plugin>
    <id>Contribution</id>
    <name>Contribution</name>
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>


    <actions>
        <!-- Define the action -->
        <action id="com.sidnio.contribution.MyAction" class="com.sidnio.contribution.MyPluginAction"
                text="My Action Text" description="My Action Description"  >
           <!-- <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>-->
        </action>

        <!-- Define the group -->
        <group id="com.sidnio.contribution.MyPluginGroup" text="My Plugin">
            <reference ref="com.sidnio.contribution.MyAction"/>
            <add-to-group group-id="MainToolbarCenter" anchor="last"/>

            <add-to-group group-id="BasicEditorPopupMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="first"/>
            <add-to-group group-id="Diff.EditorPopupMenu" anchor="first"/>

            <add-to-group group-id="Documentation.PrimaryGroup"/>
            <add-to-group group-id="HelpMenu" anchor="before" relative-to-action="WhatsNewAction"/>
        </group>


    </actions>
</idea-plugin>